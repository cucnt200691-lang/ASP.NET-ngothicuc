@model IEnumerable<KhmerFestivalWebsite.Models.Festival>
@{
    ViewData["Title"] = "Quản Lý Lễ Hội";
}

<div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary me-2">&larr; Quay lại Admin</a>
            <h1 class="d-inline">Quản Lý Lễ Hội</h1>
        </div>
        <a href="@Url.Action("CreateFestival", "Admin")" class="btn btn-primary">Thêm Lễ Hội Mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tên Lễ Hội</th>
                    <th>Địa Điểm</th>
                    <th>Thời Gian</th>
                    <th>Ngày Tạo</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var festival in Model)
                {
                    <tr>
                        <td>@festival.Name</td>
                        <td>@festival.Location</td>
                        <td>@festival.TimePeriod</td>
                        <td>@festival.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("EditFestival", "Admin", new { id = festival.Id })" class="btn btn-sm btn-warning">Sửa</a>
                            <form method="post" action="@Url.Action("DeleteFestival", "Admin")" style="display:inline;">
                                <input type="hidden" name="id" value="@festival.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>