@model List<KhmerFestivalWebsite.Models.Festival>
@{
    ViewData["Title"] = "Lễ hội";
    var searchQuery = ViewBag.SearchQuery as string;
}

<div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-900 via-red-700 to-yellow-600 text-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-8">
                <h1 class="text-4xl md:text-5xl font-bold mb-6">
                    Lễ Hội Truyền Thống Khmer
                </h1>
                <p class="text-xl md:text-2xl max-w-3xl mx-auto">
                    Khám phá những lễ hội đặc sắc của dân tộc Khmer
                </p>
            </div>

            <!-- Search Section -->
            <div class="max-w-2xl mx-auto">
                <form asp-action="Index" method="get" class="flex gap-4">
                    <div class="flex-1 relative">
                        <input type="text" name="search" value="@searchQuery" placeholder="Tìm kiếm lễ hội..." 
                               class="w-full px-4 py-3 pl-12 bg-white bg-opacity-20 text-white placeholder-white placeholder-opacity-70 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:bg-opacity-30" />
                        <i data-lucide="search" class="absolute left-4 top-3.5 h-5 w-5 text-white opacity-70"></i>
                    </div>
                    <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-blue-900 px-6 py-3 rounded-lg font-semibold transition-colors">
                        Tìm kiếm
                    </button>
                </form>
            </div>
        </div>
    </section>

    <!-- Festivals Grid -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            @if (!string.IsNullOrEmpty(searchQuery))
            {
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-900">
                        Kết quả tìm kiếm cho "@searchQuery"
                    </h2>
                    <a asp-action="Index" class="text-blue-600 hover:text-blue-800 inline-flex items-center mt-2">
                        <i data-lucide="x" class="h-4 w-4 mr-1"></i>
                        Xóa bộ lọc
                    </a>
                </div>
            }

            @if (Model.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    @foreach (var festival in Model)
                    {
                        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                            @if (!string.IsNullOrEmpty(festival.ImageUrl))
                            {
                                <img src="@festival.ImageUrl" alt="@festival.Name" class="h-48 w-full object-cover" />
                            }
                            else
                            {
                                <div class="h-48 bg-gradient-to-br from-blue-400 to-red-400 flex items-center justify-center">
                                    <div class="text-white text-center">
                                        <i data-lucide="calendar" class="h-12 w-12 mx-auto mb-2"></i>
                                        <p class="text-sm">Hình ảnh lễ hội</p>
                                    </div>
                                </div>
                            }
                            <div class="p-6">
                                <h3 class="text-xl font-bold text-gray-900 mb-2">@festival.Name</h3>
                                <p class="text-gray-600 mb-4">@festival.Description</p>
                                
                                <div class="space-y-2 mb-4">
                                    <div class="flex items-center text-sm text-gray-500">
                                        <i data-lucide="calendar" class="h-4 w-4 mr-2"></i>
                                        <span>@festival.TimePeriod</span>
                                    </div>
                                    <div class="flex items-center text-sm text-gray-500">
                                        <i data-lucide="map-pin" class="h-4 w-4 mr-2"></i>
                                        <span>@festival.Location</span>
                                    </div>
                                </div>

                                <a asp-action="Details" asp-route-id="@festival.Id"
                                   class="block w-full bg-gradient-to-r from-blue-600 to-red-600 text-white px-4 py-2 rounded-lg font-semibold hover:from-blue-700 hover:to-red-700 transition-all duration-200 text-center">
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-16">
                    <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i data-lucide="search" class="h-12 w-12 text-gray-400"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Không tìm thấy lễ hội nào</h3>
                    <p class="text-gray-600 mb-6">
                        @if (!string.IsNullOrEmpty(searchQuery))
                        {
                            <span>Không có lễ hội nào phù hợp với từ khóa "@searchQuery"</span>
                        }
                        else
                        {
                            <span>Hiện tại chưa có lễ hội nào được thêm vào hệ thống</span>
                        }
                    </p>
                    <a asp-action="Index" class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                        Xem tất cả lễ hội
                    </a>
                </div>
            }
        </div>
    </section>
</div>

<script>
    lucide.createIcons();
</script>