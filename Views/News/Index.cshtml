@model List<KhmerFestivalWebsite.Models.News>
@{
    ViewData["Title"] = "Tin tức";
}

<div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-900 via-red-700 to-yellow-600 text-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">
                Tin Tức Lễ Hội Khmer
            </h1>
            <p class="text-xl md:text-2xl max-w-3xl mx-auto">
                Cập nhật những tin tức mới nhất về các lễ hội và hoạt động văn hóa
            </p>
        </div>
    </section>

    <!-- News Grid -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            @if (Model.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    @foreach (var news in Model)
                    {
                        <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                            @if (!string.IsNullOrEmpty(news.ImageUrl))
                            {
                                <div class="h-48 relative overflow-hidden">
                                    <img src="@news.ImageUrl" alt="@news.Title" class="w-full h-full object-cover" />
                                    <div class="absolute top-4 left-4">
                                        <span class="bg-white bg-opacity-90 text-gray-800 px-3 py-1 rounded-full text-sm font-medium">
                                            Tin tức
                                        </span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="h-48 bg-gradient-to-br from-green-400 to-blue-400 flex items-center justify-center relative">
                                    <div class="text-white text-center">
                                        <i data-lucide="newspaper" class="h-12 w-12 mx-auto mb-2"></i>
                                        <p class="text-sm">Hình ảnh tin tức</p>
                                    </div>
                                    <div class="absolute top-4 left-4">
                                        <span class="bg-white bg-opacity-90 text-gray-800 px-3 py-1 rounded-full text-sm font-medium">
                                            Tin tức
                                        </span>
                                    </div>
                                </div>
                            }
                            
                            <div class="p-6">
                                <div class="flex items-center text-sm text-gray-500 mb-3">
                                    <i data-lucide="calendar" class="h-4 w-4 mr-2"></i>
                                    <time datetime="@news.PublishedAt.ToString("yyyy-MM-dd")">
                                        @news.PublishedAt.ToString("dd/MM/yyyy")
                                    </time>
                                </div>
                                
                                <h2 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2">
                                    @news.Title
                                </h2>
                                
                                <p class="text-gray-600 mb-4 line-clamp-3">
                                    @news.Excerpt
                                </p>
                                
                                <div class="flex items-center justify-between">
                                    <a asp-action="Details" asp-route-id="@news.Id"
                                       class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center">
                                        Đọc thêm
                                        <i data-lucide="arrow-right" class="h-4 w-4 ml-1"></i>
                                    </a>
                                    
                                    <div class="flex items-center space-x-2">
                                        <button class="p-2 text-gray-400 hover:text-red-500 transition-colors">
                                            <i data-lucide="heart" class="h-4 w-4"></i>
                                        </button>
                                        <button class="p-2 text-gray-400 hover:text-blue-500 transition-colors">
                                            <i data-lucide="share-2" class="h-4 w-4"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                </div>

                <!-- Pagination -->
                <div class="mt-12 flex justify-center">
                    <nav class="flex items-center space-x-2">
                        <button class="px-3 py-2 text-gray-500 hover:text-gray-700 disabled:opacity-50" disabled>
                            <i data-lucide="chevron-left" class="h-4 w-4"></i>
                        </button>
                        <button class="px-4 py-2 bg-blue-600 text-white rounded-lg">1</button>
                        <button class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">2</button>
                        <button class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">3</button>
                        <button class="px-3 py-2 text-gray-500 hover:text-gray-700">
                            <i data-lucide="chevron-right" class="h-4 w-4"></i>
                        </button>
                    </nav>
                </div>
            }
            else
            {
                <div class="text-center py-16">
                    <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i data-lucide="newspaper" class="h-12 w-12 text-gray-400"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Chưa có tin tức nào</h3>
                    <p class="text-gray-600 mb-6">
                        Hiện tại chưa có tin tức nào được đăng tải. Vui lòng quay lại sau.
                    </p>
                    <a asp-controller="Home" asp-action="Index" 
                       class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                        Về trang chủ
                    </a>
                </div>
            }
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-16 bg-gradient-to-r from-blue-50 to-red-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Đăng ký nhận tin
            </h2>
            <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
                Nhận thông báo về các tin tức mới nhất và sự kiện sắp tới của các lễ hội Khmer
            </p>
            
            <form class="max-w-md mx-auto flex gap-4">
                <input type="email" placeholder="Nhập email của bạn..." 
                       class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                <button type="submit" 
                        class="bg-gradient-to-r from-blue-600 to-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-red-700 transition-all duration-200">
                    Đăng ký
                </button>
            </form>
        </div>
    </section>
</div>

<script>
    lucide.createIcons();
</script>