@model KhmerFestivalWebsite.Models.News
@{
    ViewData["Title"] = Model.Title;
}

<div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-900 via-red-700 to-yellow-600 text-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center mb-6">
                <a asp-action="Index" class="text-white hover:text-yellow-300 inline-flex items-center">
                    <i data-lucide="arrow-left" class="h-5 w-5 mr-2"></i>
                    Quay lại tin tức
                </a>
            </div>
            <div class="max-w-4xl">
                <div class="flex items-center text-yellow-300 mb-4">
                    <i data-lucide="calendar" class="h-4 w-4 mr-2"></i>
                    <time datetime="@Model.PublishedAt.ToString("yyyy-MM-dd")">
                        @Model.PublishedAt.ToString("dd/MM/yyyy")
                    </time>
                </div>
                <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
                    @Model.Title
                </h1>
                <p class="text-xl text-gray-200">
                    @Model.Excerpt
                </p>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="py-16">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <article class="bg-white rounded-lg shadow-lg overflow-hidden">
                <!-- Featured Image -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="h-96 relative overflow-hidden">
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="w-full h-full object-cover" />
                        <div class="absolute bottom-4 left-4 text-white bg-black bg-opacity-50 px-3 py-1 rounded">
                            <p class="text-sm">@Model.Title</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="h-96 bg-gradient-to-br from-green-400 to-blue-400 flex items-center justify-center">
                        <div class="text-white text-center">
                            <i data-lucide="newspaper" class="h-24 w-24 mx-auto mb-4"></i>
                            <p class="text-lg">Hình ảnh cho bài viết</p>
                        </div>
                    </div>
                }

                <!-- Article Content -->
                <div class="p-8">
                    <!-- Article Meta -->
                    <div class="flex items-center justify-between mb-8 pb-6 border-b border-gray-200">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-red-500 rounded-full flex items-center justify-center">
                                <span class="text-white font-bold">KH</span>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900">Lễ Hội Khmer</p>
                                <p class="text-sm text-gray-500">
                                    @Model.PublishedAt.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3">
                            <button class="p-2 text-gray-400 hover:text-red-500 transition-colors">
                                <i data-lucide="heart" class="h-5 w-5"></i>
                            </button>
                            <button class="p-2 text-gray-400 hover:text-blue-500 transition-colors">
                                <i data-lucide="bookmark" class="h-5 w-5"></i>
                            </button>
                            <button class="p-2 text-gray-400 hover:text-green-500 transition-colors">
                                <i data-lucide="share-2" class="h-5 w-5"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Article Body -->
                    <div class="prose max-w-none">
                        <div class="text-gray-700 leading-relaxed text-lg">
                            @Html.Raw(Model.Content.Replace("\n", "<br />"))
                        </div>
                    </div>

                    <!-- Tags -->
                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <div class="flex items-center space-x-2">
                            <span class="text-gray-600 font-medium">Thẻ:</span>
                            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">Lễ hội</span>
                            <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm">Văn hóa</span>
                            <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm">Khmer</span>
                        </div>
                    </div>

                    <!-- Share Section -->
                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Chia sẻ bài viết</h3>
                        <div class="flex space-x-4">
                            <button class="flex items-center space-x-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                                <i data-lucide="facebook" class="h-4 w-4"></i>
                                <span>Facebook</span>
                            </button>
                            <button class="flex items-center space-x-2 bg-sky-500 text-white px-4 py-2 rounded-lg hover:bg-sky-600 transition-colors">
                                <i data-lucide="twitter" class="h-4 w-4"></i>
                                <span>Twitter</span>
                            </button>
                            <button class="flex items-center space-x-2 bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors">
                                <i data-lucide="message-circle" class="h-4 w-4"></i>
                                <span>WhatsApp</span>
                            </button>
                            <button class="flex items-center space-x-2 bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors">
                                <i data-lucide="link" class="h-4 w-4"></i>
                                <span>Sao chép link</span>
                            </button>
                        </div>
                    </div>
                </div>
            </article>

            <!-- Related Articles -->
            <div class="mt-16">
                <h2 class="text-2xl font-bold text-gray-900 mb-8">Bài viết liên quan</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                        <div class="h-48 bg-gradient-to-br from-purple-400 to-pink-400"></div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">
                                Bảo tồn và phát huy giá trị văn hóa lễ hội Khmer
                            </h3>
                            <p class="text-gray-600 mb-4">
                                Cần có những biện pháp cụ thể để bảo tồn văn hóa truyền thống...
                            </p>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-gray-500">15/01/2025</span>
                                <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">
                                    Đọc thêm
                                </a>
                            </div>
                        </div>
                    </article>

                    <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                        <div class="h-48 bg-gradient-to-br from-orange-400 to-red-400"></div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">
                                Lễ Ok Om Bok - Nét đẹp văn hóa tâm linh
                            </h3>
                            <p class="text-gray-600 mb-4">
                                Khám phá ý nghĩa sâu sắc của lễ hội cúng trăng...
                            </p>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-gray-500">10/01/2025</span>
                                <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">
                                    Đọc thêm
                                </a>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    lucide.createIcons();
</script>